{"version":3,"file":"vueprint_type_import_only.mjs","sources":["../../src/rules/vueprint_type_import_only.ts"],"sourcesContent":["/**\n * @module @nhtio/eslint-config/rules/vueprint_type_import_only\n */\n\nimport { createRule } from './common'\n\n/**\n * An ESLint rule that disallows non-type imports from \"@jakguru/vueprint\".\n */\nconst vueprintTypeImportOnly = createRule({\n  name: 'vueprintTypeImportOnly',\n  meta: {\n    type: 'problem',\n    docs: {\n      description:\n        'Disallow non-type imports from \"@jakguru/vueprint\". Only type imports are permitted.',\n    },\n    schema: [], // no options\n    messages: {\n      nonTypeImport:\n        'Non-type imports from \"@jakguru/vueprint\" are not allowed. Use type-only imports.',\n    },\n    fixable: 'code',\n  },\n  create(context) {\n    return {\n      ImportDeclaration(node) {\n        if (node.source.value === '@jakguru/vueprint') {\n          // @ts-ignore\n          if (node.importKind !== 'type') {\n            context.report({\n              node,\n              messageId: 'nonTypeImport',\n              fix(fixer) {\n                return fixer.insertTextAfterRange([node.range![0], node.range![0] + 6], ' type')\n              },\n            })\n          }\n        }\n      },\n    }\n  },\n  defaultOptions: [],\n})\n\nexport default vueprintTypeImportOnly\n"],"names":["vueprintTypeImportOnly","createRule","context","node","fixer"],"mappings":";AASA,MAAMA,IAAyBC,EAAW;AAAA,EACxC,MAAM;AAAA,EACN,MAAM;AAAA,IACJ,MAAM;AAAA,IACN,MAAM;AAAA,MACJ,aACE;AAAA,IACJ;AAAA,IACA,QAAQ,CAAC;AAAA;AAAA,IACT,UAAU;AAAA,MACR,eACE;AAAA,IACJ;AAAA,IACA,SAAS;AAAA,EACX;AAAA,EACA,OAAOC,GAAS;AACP,WAAA;AAAA,MACL,kBAAkBC,GAAM;AAClB,QAAAA,EAAK,OAAO,UAAU,uBAEpBA,EAAK,eAAe,UACtBD,EAAQ,OAAO;AAAA,UACb,MAAAC;AAAA,UACA,WAAW;AAAA,UACX,IAAIC,GAAO;AACT,mBAAOA,EAAM,qBAAqB,CAACD,EAAK,MAAO,CAAC,GAAGA,EAAK,MAAO,CAAC,IAAI,CAAC,GAAG,OAAO;AAAA,UACjF;AAAA,QAAA,CACD;AAAA,MAGP;AAAA,IAAA;AAAA,EAEJ;AAAA,EACA,gBAAgB,CAAC;AACnB,CAAC;"}