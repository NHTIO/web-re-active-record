import { c as p } from "../common-CU_gyL-S.mjs";
const a = p({
  name: "vueprintTypeImportOnly",
  meta: {
    type: "problem",
    docs: {
      description: 'Disallow non-type imports from "@jakguru/vueprint". Only type imports are permitted.'
    },
    schema: [],
    // no options
    messages: {
      nonTypeImport: 'Non-type imports from "@jakguru/vueprint" are not allowed. Use type-only imports.'
    },
    fixable: "code"
  },
  create(r) {
    return {
      ImportDeclaration(e) {
        e.source.value === "@jakguru/vueprint" && e.importKind !== "type" && r.report({
          node: e,
          messageId: "nonTypeImport",
          fix(t) {
            return t.insertTextAfterRange([e.range[0], e.range[0] + 6], " type");
          }
        });
      }
    };
  },
  defaultOptions: []
});
export {
  a as default
};
