import { PLUGINS_LIST as AdonisPluginsList } from '@adonisjs/eslint-config';
import type { TSESLint } from '@typescript-eslint/utils';
import type { FlatConfig, Linter } from '@typescript-eslint/utils/ts-eslint';
interface AdonisConfigAppFn {
    (...configBlocksToMerge: FlatConfig.Config[]): TSESLint.FlatConfig.ConfigArray;
}
/**
 * Configures ESLint to use an opinionated config tailored for NHT Development
 */
export declare const configApp: AdonisConfigAppFn;
type AdonisRuleConfig = Partial<Linter.RulesRecord>;
/**
 * Default list of rules to apply
 */
export declare const RULES_LIST: AdonisRuleConfig;
interface AdonisPluginsList {
    [pluginName: string]: FlatConfig.Plugin;
}
/**
 * Default list of plugins to apply
 */
export declare const PLUGINS_LIST: AdonisPluginsList;
export {};
